{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "--compilers",
        "ts:ts-node/register,tsx:ts-node/register",
        "--colors",
        "${workspaceRoot}/test/**/*.spec.ts"
      ],
      "protocol": "inspector"
    }
  ]
}